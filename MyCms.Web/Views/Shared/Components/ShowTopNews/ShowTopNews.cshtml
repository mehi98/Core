@model IEnumerable<MyCms.DataLayer.Page>
@using MyCms;
<section class="last-news-side border-radius">
    <header><i class="icons icon-star"></i><h3></h3></header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="~/Image/@item.ImageName">
                <h2><a href="/News/@item.PageID">@item.PageTitle</a></h2>
                <span> انتشار:@item.CreateDate.ToShamsi()</span>
            </li>
        }
    </ul>
</section>