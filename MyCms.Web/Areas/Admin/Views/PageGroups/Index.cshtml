@model IEnumerable<MyCms.DataLayer.PageGroup.PageGroup>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create" class="btn btn-primary">افزودن</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GroupTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupTitle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GroupID" class="btn btn-warning" style="margin-right:15%">ویرایش</a> 
                <a asp-action="Details" asp-route-id="@item.GroupID" class="btn btn-primary" style="margin-right:5%">نمایش</a> 
                <a asp-action="Delete" asp-route-id="@item.GroupID" class="btn btn-danger" style="margin-right:5%">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
