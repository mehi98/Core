@model MyCms.DataLayer.Page
@using MyCms;
@{
    ViewData["Title"] = "Shownews";
}


<section class="single-news border-radius">
    <header><h2> @Model.PageTitle </h2> <span> <i class="fa fa-calendar"></i>  انتشار : @Model.CreateDate.ToShamsi()</span></header>
    <article>


        @if (Model.ImageName != null)
        {
            <div>
                <img src="~/Image/@Model.ImageName" alt="@Model.PageTitle" class="thumbnail" style="width:200px" />
            </div>
        }

        <p>
            @Model.ShortDescription
        </p>
    </article>
</section>
<div class="keywords border-radius">
   @foreach(var item in Model.PageTags.Split("-"))
   {
    <a href="/News/Search?q=@item">@item</a>
   }
</div>